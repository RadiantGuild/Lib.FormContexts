{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2015",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "types": ["react/next"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/"
    ]
}
